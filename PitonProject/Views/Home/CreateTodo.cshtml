@model PitonProject.Models.CreateTodoViewModel

@{
    ViewData["Title"] = "CreateTodo";
}

<h1>CreateTodo</h1>

<h4>Todo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTodo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Todo.TodoType" class="control-label"></label>
                <select asp-for="Todo.TodoType" class="form-control">
                    <option>Günlük Plan</option>
                    <option>Haftalık Plan</option>
                    <option>Aylık Plan</option>
                    <option>Yıllık Plan</option>

                </select>
                <span asp-validation-for="Todo.TodoType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Todo.Title" class="control-label"></label>
                <input asp-for="Todo.Title" class="form-control" />
                <span asp-validation-for="Todo.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Todo.Description" class="control-label"></label>
                <input asp-for="Todo.Description" class="form-control" />
                <span asp-validation-for="Todo.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Todo.Date" class="control-label"></label>
                <input asp-for="Todo.Date" class="form-control" />
                <span asp-validation-for="Todo.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Todo.UserId" class="control-label"></label>
                <select asp-for=Todo.UserId>
                    @foreach(var item in Model.User)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="Todo.UserId" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
